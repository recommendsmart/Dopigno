{#
/**
 * @file
 * Theme for recipe duration markup.
 *
 * Available variables:
 * - hours: The amount of hours in the time duration.
 * - minutes: The amount of minutes in the time duration.
 *
 * @see template_preprocess_recipe_duration()
 */
#}

{% if hours and minutes %}
  {{ hours }}, {{ minutes }}
{% elseif hours %}
  {{ hours }}
{% else %}
  {{ minutes }}
{% endif %}
